<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MovieApp - Prime-Inspired</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Header -->
  <header class="pv-header">
    <div class="pv-left">
      <span class="pv-menu-icon">‚ò∞</span>
      <h1 class="pv-site-title">MovieApp</h1>
    </div>
    <div class="pv-right">
      <span class="pv-search-icon">üîç</span>
    </div>
  </header>

  <!-- Hero Banner -->
  <section class="pv-hero-banner">
    <!-- Replace the placeholder with your own hero image -->
    <img 
      src="https://via.placeholder.com/1600x600.png?text=Hero+Banner" 
      alt="Hero Banner" 
      class="pv-hero-image"
    />
    <div class="pv-hero-overlay">
      <div class="pv-hero-content">
        <h2>Watch Anywhere, Anytime</h2>
        <p>Enjoy the best movies and shows with a single click</p>
        <button class="pv-cta-button">Start Watching</button>
      </div>
    </div>
  </section>

  <main>
    <!-- Trending Section -->
    <section class="pv-category-section">
      <h2>Trending Now</h2>
      <div class="pv-movie-scroll">
        <% trendingMovies.forEach(function(movie) { %>
          <div class="pv-movie-card">
            <a href="/movie/<%= movie.id %>">
              <img src="<%= movie.poster %>" alt="<%= movie.title %> Poster">
              <h3><%= movie.title %></h3>
            </a>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Bollywood Section -->
    <section class="pv-category-section">
      <h2>Bollywood</h2>
      <div class="pv-movie-scroll">
        <% bollywoodMovies.forEach(function(movie) { %>
          <div class="pv-movie-card">
            <a href="/movie/<%= movie.id %>">
              <img src="<%= movie.poster %>" alt="<%= movie.title %> Poster">
              <h3><%= movie.title %></h3>
            </a>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Hollywood Section -->
    <section class="pv-category-section">
      <h2>Hollywood</h2>
      <div class="pv-movie-scroll">
        <% hollywoodMovies.forEach(function(movie) { %>
          <div class="pv-movie-card">
            <a href="/movie/<%= movie.id %>">
              <img src="<%= movie.poster %>" alt="<%= movie.title %> Poster">
              <h3><%= movie.title %></h3>
            </a>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- South Section -->
    <section class="pv-category-section">
      <h2>South</h2>
      <div class="pv-movie-scroll">
        <% southMovies.forEach(function(movie) { %>
          <div class="pv-movie-card">
            <a href="/movie/<%= movie.id %>">
              <img src="<%= movie.poster %>" alt="<%= movie.title %> Poster">
              <h3><%= movie.title %></h3>
            </a>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Punjabi Section -->
    <section class="pv-category-section">
      <h2>Punjabi</h2>
      <div class="pv-movie-scroll">
        <% punjabiMovies.forEach(function(movie) { %>
          <div class="pv-movie-card">
            <a href="/movie/<%= movie.id %>">
              <img src="<%= movie.poster %>" alt="<%= movie.title %> Poster">
              <h3><%= movie.title %></h3>
            </a>
          </div>
        <% }) %>
      </div>
    </section>
  </main>
</body>
</html>
