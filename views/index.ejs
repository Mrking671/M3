<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MovieApp</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Header -->
  <header class="prime-header">
    <div class="menu-icon">‚ò∞</div>
    <h1 class="site-title">MovieApp</h1>
    <div class="search-icon">üîç</div>
  </header>

  <!-- Hero banner -->
  <section class="hero-banner">
    <img 
      src="https://via.placeholder.com/1080x600.png?text=Hero+Banner" 
      alt="Hero Banner" 
      class="hero-image"
    />
    <div class="hero-text">
      <h2>Welcome to MovieApp</h2>
      <p>Stream or Download Your Favorite Movies</p>
    </div>
  </section>

  <main>
    <!-- Trending Movies -->
    <section class="category-section">
      <h2>Trending Movies</h2>
      <div class="movie-scroll">
        <% trendingMovies.forEach(function(movie) { %>
          <div class="movie-card">
            <a href="/movie/<%= movie.id %>">
              <img src="<%= movie.poster %>" alt="<%= movie.title %>">
              <h3><%= movie.title %></h3>
            </a>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Bollywood -->
    <section class="category-section">
      <h2>Bollywood</h2>
      <div class="movie-scroll">
        <% bollywoodMovies.forEach(function(movie) { %>
