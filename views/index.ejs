              <img src="<%= movie.poster %>" alt="<%= movie.title %>">
              <h3><%= movie.title %></h3>
            </a>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- South -->
    <section class="category-section">
      <h2>South</h2>
      <div class="movie-scroll">
        <% southMovies.forEach(function(movie) { %>
          <div class="movie-card">
            <a href="/movie/<%= movie.id %>">
              <img src="<%= movie.poster %>" alt="<%= movie.title %>">
              <h3><%= movie.title %></h3>
            </a>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Punjabi -->
    <section class="category-section">
      <h2>Punjabi</h2>
      <div class="movie-scroll">
        <% punjabiMovies.forEach(function(movie) { %>
          <div class="movie-card">
            <a href="/movie/<%= movie.id %>">
              <img src="<%= movie.poster %>" alt="<%= movie.title %>">
              <h3><%= movie.title %></h3>
            </a>
          </div>
        <% }) %>
      </div>
    </section>
  </main>
</body>
</html>
