<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MovieApp - Landing Page</title>
  <!-- Optional Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link 
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" 
    rel="stylesheet"
  >
  <!-- Link to your CSS file in /public/css/style.css -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Header with search bar on top-right -->
  <header class="landing-header">
    <div class="header-left">
      <a href="/" class="logo">MovieApp</a>
    </div>
    <div class="header-right">
      <input 
        type="text" 
        placeholder="Search..." 
        class="search-bar"
      />
    </div>
  </header>

  <!-- Trending Movies Carousel -->
  <section class="trending-section">
    <h2>Trending Movies</h2>
    <div class="carousel-container">
      <button class="carousel-btn left-btn">&lt;</button>
      <div class="carousel-track">
        <% trendingMovies.forEach(function(movie) { %>
          <div class="carousel-item">
            <img 
              src="<%= movie.poster %>" 
              alt="<%= movie.title %> Poster"
            />
            <h4><%= movie.title %></h4>
          </div>
        <% }) %>
      </div>
      <button class="carousel-btn right-btn">&gt;</button>
    </div>
  </section>

  <!-- Categories (like Netflix) -->
  <section class="categories-section">
    <% categories.forEach(function(category) { %>
      <div class="category-block">
        <h2><%= category.name %></h2>
        <div class="category-scroll">
          <% category.movies.forEach(function(movie) { %>
            <div class="movie-card">
              <img 
                src="<%= movie.poster %>" 
                alt="<%= movie.title %> Poster"
              />
              <h4><%= movie.title %></h4>
            </div>
          <% }) %>
        </div>
      </div>
    <% }) %>
  </section>

  <!-- Optional JavaScript for horizontal scrolling in the trending carousel -->
  <script>
    const track = document.querySelector('.carousel-track');
    const leftBtn = document.querySelector('.left-btn');
    const rightBtn = document.querySelector('.right-btn');

    // Scroll offset (in pixels)
    const scrollAmount = 300;

    leftBtn.addEventListener('click', () => {
      track.scrollBy({ top: 0, left: -scrollAmount, behavior: 'smooth' });
    });

    rightBtn.addEventListener('click', () => {
      track.scrollBy({ top: 0, left: scrollAmount, behavior: 'smooth' });
    });
  </script>
</body>
</html>
